<Window x:Class="Arasoi_MINITCC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arasoi_MINITCC.Tabs.Tournament"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1350" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:TournamentViewModel />
    </Window.DataContext>

    <Grid>
        <TabControl>
            <!-- Tab to manage tournaments -->
            <TabItem Header="Campeonatos">
                <Grid>
                    <ListBox Margin="100,50,100,50" ItemsSource="{Binding TournamentCards}" Grid.ColumnSpan="2">
                        <!-- Template to create tournament cards -->
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1000"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <Label Content="{Binding Name}" Grid.Column="0" FontSize="20"/>
                                        <Label Content="{Binding Filiation}" Grid.Column="0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="5">
                                        <Button Content="Editar" Command="{Binding EditCommand}" Width="50"/>
                                        <Button Content="Deletar" Command="{Binding DeleteCommand}" Width="50"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="+" Margin="1244,626,10,10" Click="Add_Click"/>
                </Grid>
            </TabItem>
            <!-- Tab to add athlete -->
            <TabItem Header="Atletas">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
